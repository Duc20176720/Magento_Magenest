<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="magenest_test_address" resource="default" engine="innodb" comment="Magenest Test Address Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="street" nullable="false" length="255" comment="Street"/>
        <column xsi:type="varchar" name="city" nullable="false" length="255" comment="City"/>
        <column xsi:type="varchar" name="country" nullable="false" length="50" comment="Country"/>
        <column xsi:type="varchar" name="region" nullable="false" length="255" comment="Region"/>
        <column xsi:type="varchar" name="contact_name" nullable="false" length="255" comment="Postcode"/>
        <column xsi:type="int" name="telephone" nullable="false"  comment="Telephone"/>
        <column xsi:type="int" name="fax" nullable="false"  comment="Fax"/>
        <column xsi:type="varchar" name="first_name" nullable="false" length="255" comment="First name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" length="255" comment="Last Name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email"/>
        <column xsi:type="varchar" name="prefix" nullable="false" length="255" comment="Prefix"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>